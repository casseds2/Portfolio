{
  "name": "firebase-portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bluebird": "^3.5.5",
    "firebase": "^6.1.1",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "react-styleguidist": "^9.1.5",
    "react-typist": "^2.0.5",
    "superagent": "^5.0.6"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "fix-code": "prettier-eslint --write 'src/**/*.{js,jsx}' "
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "prettier-stylelint": "^0.4.2"
  }
}
